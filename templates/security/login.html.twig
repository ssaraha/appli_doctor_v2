{% extends 'base_security.html.twig' %}

{% block title %}{{ 'appli_doctor.security.login.title_page'|trans }}{%endblock%}

{% block body %}
    {% if error %}
        <div class="alert alert-error rounded" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form method="post" class="mt-5 shadow bg-light p-4 rounded">
                <h1 class="mt-3 mb-5 text-muted text-center">
                    {{ 'appli_doctor.security.login.title_login'|trans }}
                </h1>

                {#% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %#}
       

                <div class="form-group">
                    <label for="email" class="text-muted font-weight-normal">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="form-goup">
                    <label for="password" class="text-muted font-weight-normal">Password</label>
                    <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                #}

                <div class="mt-4 d-flex justify-content-between">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> {{ 'appli_doctor.security.login.remember_me'|trans }}
                        </label>
                    </div>
                    
                    <a href="#">{{ 'appli_doctor.security.login.forgot_password'|trans }}</a>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <button class="btn btn-lg btn-block btn-primary" type="submit">
                            {{ 'appli_doctor.security.login.register'|trans }}
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-success btn-lg btn-block" href="#">{{ 'appli_doctor.security.login.cancel'|trans }}</a>
                        
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
